          class="placeholder-primary text-secondary border-primary focus:border-secondary focus:border-b-4 focus:border-t-4 focus:border-l-4 peer focus:outline-none border-t-2 border-b-2 border-l-2 w-full flex-grow px-2 py-4 rounded-l-lg"
